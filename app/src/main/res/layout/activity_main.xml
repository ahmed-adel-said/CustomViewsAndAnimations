<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

    <include
            android:id="@+id/small_pizza_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/pizza_list_item"/>

    <include
            android:id="@+id/medium_pizza_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/small_pizza_list_item"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/pizza_list_item"/>

    <include
            android:id="@+id/large_pizza_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/medium_pizza_list_item"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/pizza_list_item"/>

    <com.egdroid.customviewsandanimations.widget.NumberOfPizzasView
            android:id="@+id/small_number_of_pizza_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/large_pizza_list_item"
            app:layout_constraintStart_toStartOf="parent"
            app:pizza_size="small"
            app:pizza_color="@color/red"/>

    <com.egdroid.customviewsandanimations.widget.NumberOfPizzasView
            android:id="@+id/medium_number_of_pizza_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/large_pizza_list_item"
            app:layout_constraintStart_toEndOf="@id/small_number_of_pizza_view"
            app:layout_constraintEnd_toStartOf="@id/large_number_of_pizza_view"
            app:pizza_size="medium"
            app:pizza_color="@color/green"/>

    <com.egdroid.customviewsandanimations.widget.NumberOfPizzasView
            android:id="@+id/large_number_of_pizza_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/large_pizza_list_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:pizza_size="large"
            app:pizza_color="@color/blue"/>

    <com.egdroid.customviewsandanimations.widget.VersionNameTextView
            android:id="@+id/version_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/CustomTitle"
            tools:text="Version Name : 1.0v"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
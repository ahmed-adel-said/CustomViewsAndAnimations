<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
            android:id="@+id/decrement_num_of_pizzas_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/minus"
            android:background="@drawable/transparent_bg_bordered"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/increment_num_of_pizzas_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/plus"
            android:background="@drawable/transparent_bg_bordered"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:id="@+id/num_of_pizzas_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PizzaSizeStyle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/increment_num_of_pizzas_btn"
            app:layout_constraintBottom_toBottomOf="@id/increment_num_of_pizzas_btn"
            app:layout_constraintStart_toEndOf="@id/decrement_num_of_pizzas_btn"
            app:layout_constraintEnd_toStartOf="@id/increment_num_of_pizzas_btn"
            tools:text="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>